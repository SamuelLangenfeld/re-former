<%= form_for @user do |f|%>
   <%= f.label :username, 'Username: ' %>
   <%= f.text_field :username, placeholder: 'Your username' %>
   <%= f.label :email, 'Email: '%>
   <%= f.text_field :email, placeholder:'example@example.com' %>
   <%= f.label :password, 'Password: ' %>
   <%= f.text_field :password %>
   <%= f.submit "Submit" %>
<% end %>